# sudo works with aliases
alias sudo='sudo '

# sudi is sudo -i
alias sudi='sudo -i'

# netcat udp hostname port
alias nc-u='nc -u -zv'

# netcat tcp hostname port
alias nc-t='nc -t -zv'

# l is ls -alF
alias l='ls -alF'

# ll is ls -l
alias ll='ls -l'

# la is ls -la
alias la='ls -la'

# lat is ls -lat
alias lat='ls -lat'

# lta is ls -lta
alias lta='ls -lta'

# lt is ls -lt
alias lt='ls -lt'
